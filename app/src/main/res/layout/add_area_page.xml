<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60px"
        android:layout_marginTop="70px"
        android:layout_marginRight="60px"
        android:layout_marginBottom="240px"
        app:cardCornerRadius="70dp">



        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrowbendupleft" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="77px"
            android:layout_marginStart="151px"
            android:layout_marginTop="40px"
            android:gravity="center_vertical"
            android:text="구역 A"
            android:textColor="@color/gray"
            android:textSize="36px"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_marginStart="1550px"
            android:layout_marginTop="40px"
            app:srcCompat="@drawable/ic_drop" />

        <TextView
            android:id="@+id/plant_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1600px"
            android:layout_marginTop="40px"
            android:text="47.3%RH"
            android:textSize="32px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230px"
            android:layout_marginTop="280px"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/add_pic"
                android:layout_width="336px"
                android:layout_height="336px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textColor="@color/gray"
                        android:textSize="48px" />

                    <EditText
                        android:id="@+id/plant_name"
                        android:layout_width="500px"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="이름을 입력하세요"
                        android:textColor="@color/gray"
                        android:textSize="30px" />

                    <Button
                        android:id="@+id/plant_name_check"
                        android:layout_width="196px"
                        android:layout_height="95px"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/ic_gray_button"
                        android:text="확인"
                        android:textColor="@color/white"
                        android:textSize="48px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="50px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:text="물주기"
                        android:textColor="@color/gray"
                        android:textSize="48px" />

                    <EditText
                        android:id="@+id/plant_watering_cycle"
                        android:layout_width="500px"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="물주기 일 수를 입력하세요 (숫자)"
                        android:textColor="@color/gray"
                        android:textSize="30px" />

                    <Button
                        android:id="@+id/plant_cycle_check"
                        android:layout_width="196px"
                        android:layout_height="95px"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/ic_gray_button"
                        android:text="확인"
                        android:textColor="@color/white"
                        android:textSize="48px" />

                </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>