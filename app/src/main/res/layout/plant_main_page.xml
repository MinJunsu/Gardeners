<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_3"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60px"
        android:layout_marginTop="50px"
        android:layout_marginRight="60px"
        android:layout_marginBottom="240px"
        app:cardCornerRadius="70px">
        <ProgressBar
            android:id="@+id/progressBar1"
            android:indeterminateTint="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"

            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrowbendupleft" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="77px"
            android:layout_marginStart="151px"
            android:layout_marginTop="40px"
            android:gravity="center_vertical"
            android:text="구역 A"
            android:textColor="@color/gray"
            android:textSize="36px"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="42px"
            android:layout_height="42px"
            android:scaleType="centerCrop"
            android:layout_marginStart="1550px"
            android:layout_marginTop="40px"
            app:srcCompat="@drawable/ic_drop" />

        <TextView
            android:id="@+id/plant_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1600px"
            android:layout_marginTop="40px"
            android:text="47.3%RH"
            android:textSize="32px" />

        <androidx.cardview.widget.CardView
            android:layout_width="330px"
            android:layout_height="500px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="200px"
            app:cardCornerRadius="30px">

            <LinearLayout
                android:id="@+id/plant_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/vlog_image"
                    android:layout_width="230px"
                    android:layout_height="230px"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/plant_1" />

                <TextView
                    android:id="@+id/vlog_plant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="내 장미"
                    android:fontFamily="@font/nb"
                    android:textColor="@color/black"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/vlog_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="90px"
                    android:text="하루치"
                    android:fontFamily="@font/nr"
                    android:textColor="@color/black"
                    android:textSize="32px" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="420px"
            android:layout_marginTop="120px"
            android:layout_marginBottom="110px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1630px"
            android:layout_marginTop="500px"
            android:orientation="vertical">

<!--            <Button-->
<!--                android:id="@+id/change_option_btn"-->
<!--                android:layout_width="90px"-->
<!--                android:layout_height="90px"-->
<!--                android:background="@drawable/ic_circle_button"-->
<!--                android:drawableTop="@drawable/ic_gear"-->
<!--                android:padding="25px" />-->

<!--            <Button-->
<!--                android:id="@+id/show_vlog_btn"-->
<!--                android:layout_width="90px"-->
<!--                android:layout_height="90px"-->
<!--                android:layout_marginTop="30px"-->
<!--                android:background="@drawable/ic_circle_button"-->
<!--                android:drawableTop="@drawable/ic_camera"-->
<!--                android:padding="25px" />-->

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>