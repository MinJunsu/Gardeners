<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="1000px"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="31px"
        android:layout_height="396px"
        android:src="@drawable/ic_diary_line"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/diary_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022.02.02"
            android:textColor="@color/gray"
            android:textSize="28px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="30px"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_diary_plant"
                android:layout_width="230px"
                android:layout_height="230px"
                android:layout_marginLeft="10px"
                android:layout_marginTop="10px"
                android:src="@drawable/plant_1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px">
                <TextView
                    android:id="@+id/diary_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:textColor="@color/black"
                    android:text="'내장미' 등록"
                    />
                <TextView
                    android:id="@+id/diary_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/gray"
                    android:text="일기가 들어갈 부분입니다."
                    android:layout_marginTop="20px"
                   />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>