<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1685px"
    android:layout_height="480px"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="200px"
    app:cardCornerRadius="60px"
    app:cardElevation="15px">

    <TextView
        android:id="@+id/tv_vlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:text="식물Vlog"
        android:textSize="40px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="550px"
        android:layout_marginTop="160px">

        <LinearLayout
            android:id="@+id/day_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="하루치"
                android:textSize="32px" />

            <ToggleButton
                android:id="@+id/day_btn"
                android:textOff=""
                android:textOn=""
                android:layout_marginTop="10px"
                android:layout_gravity="center"
                android:layout_width="120px"
                android:layout_height="120px"
                android:background="@drawable/play_btn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/full_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="전체 성장과정"
                android:textSize="32px" />

            <ToggleButton
                android:id="@+id/full_btn"
                android:textOff=""
                android:textOn=""
                android:layout_marginTop="10px"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_gravity="center"
                android:background="@drawable/play_btn" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="360px"
        android:layout_marginLeft="1253px">

        <Button
            android:id="@+id/vlog_btn"
            android:layout_width="186px"
            android:layout_height="77px"
            android:background="@drawable/search_view_bg"
            android:layout_marginRight="22px"
            android:elevation="30px"
            android:text="기록 보기"
            android:textSize="32px" />

        <Button
            android:id="@+id/check_btn"
            android:layout_width="186px"
            android:layout_height="77px"
            android:background="@drawable/search_view_bg"
            android:text="확인"
            android:textSize="32px"/>
        
    </LinearLayout>


</androidx.cardview.widget.CardView>