<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60px"
        android:layout_marginTop="70px"
        android:layout_marginRight="60px"
        android:layout_marginBottom="240px"
        app:cardCornerRadius="70dp">


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="25px"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrowbendupleft" />

        <androidx.cardview.widget.CardView
            android:layout_width="330px"
            android:layout_height="740px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="115px"
            app:cardCornerRadius="30px">

            <LinearLayout
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/vlog_image"
                    android:layout_width="230px"
                    android:layout_height="230px"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/plant_1"/>

                <TextView
                    android:id="@+id/vlog_plant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="40px"
                    android:textColor="@color/black"
                    android:text="내 장미" />

                <TextView
                    android:id="@+id/vlog_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180px"
                    android:textSize="32px"
                    android:textColor="@color/black"
                    android:text="하루치" />
                <TextView
                    android:id="@+id/vlog_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50px"
                    android:textSize="32px"
                    android:textColor="@color/black"
                    android:text="2022.01.01\n-2022.02.01" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/videoCard"
            android:layout_width="1330px"
            android:layout_height="830px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="410px"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40px">

            <VideoView
                android:id="@+id/relativeVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="-10px"
                android:paddingBottom="-10px" />
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>